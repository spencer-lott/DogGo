            </div>
            <div class="form-group">
                <label asp-for="Walk.WalkerId" class="control-label"></label>
                <input asp-for="Walk.WalkerId" class="form-control" />
                <span asp-validation-for="Walk.WalkerId" class="text-danger"></span>
